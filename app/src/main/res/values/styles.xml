<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextViewStyleQuestionHeader" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/view_margin</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/size_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewStyleQuestionBody" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/view_margin</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/size_small</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextViewStyleHeader" parent="android:Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/view_margin</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/size_huge</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="EditTextStyle" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/view_margin</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/size_small</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="RadioButtonStyle" parent="Base.Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:color">@color/colorPrimary</item>
    </style>

    <style name="CheckBoxStyle" parent="CheckBoxStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/size_medium</item>
    </style>

    <style name="ButtonStyle" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/button_margin</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/size_large</item>
    </style>
</resources>
